@model IEnumerable<odshop.Models.Product>

@{
    ViewData["Title"] = "Admin Panel";
}

<h2>Admin Panel – Ürün Yönetimi</h2>

<p>
    <a asp-controller="Products" asp-action="Create" class="btn btn-success">
        + Yeni Ürün Ekle
    </a>
</p>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Fiyat</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price ₺</td>
                <td>
                    <a asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
